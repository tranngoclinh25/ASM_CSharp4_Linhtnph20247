@model ASM_CSharp4_Linhtnph20247.ViewModel.OrderViewModel
@{
    ViewData["Title"] = "Order";
}
    <!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                            <tr>
                                <th>User</th>
                                <th>PhoneNumber</th>
                                <th>Address</th>
                                <th>Order date</th>
                                <th>Method Payment</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var order in @Model.Orders.OrderByDescending(p=>p.CreatedAt))
                            {
                                <tr>
                                    <td>
                                        @order.User.FullName
                                    </td>
                                    <td>
                                        @order.User.PhoneNumber
                                    </td>
                                    <td>
                                        @order.User.Address
                                    </td>
                                    <td>
                                        @order.CreatedAt
                                    </td>
                                    <td>
                                       @order.PaymentMethod
                                    </td>
                                    <td>
                                        @order.TotalPrice
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-success">
                                            <a class="text-decoration-none text-white" href="/Order/OrderDetail/@order.Id">Detail</a>
                                        </button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</section>
    <!-- Shoping Cart Section End -->