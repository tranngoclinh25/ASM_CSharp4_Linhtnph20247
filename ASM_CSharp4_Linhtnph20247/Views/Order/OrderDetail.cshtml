@model ASM_CSharp4_Linhtnph20247.ViewModel.OrderViewModel
@{
    ViewData["Title"] = "Order Detail";
}
    <!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                            <tr>
                                <th>Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Order date</th>
                                <th>Method Payment</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var orderDetail in Model.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        @if (System.IO.Path.GetExtension(orderDetail.Product.ImageUrl) == ".jpg" ||
                                             System.IO.Path.GetExtension(orderDetail.Product.ImageUrl) == ".png" ||
                                             System.IO.Path.GetExtension(orderDetail.Product.ImageUrl) == ".jpeg" ||
                                             System.IO.Path.GetExtension(orderDetail.Product.ImageUrl) == ".tiff" ||
                                             System.IO.Path.GetExtension(orderDetail.Product.ImageUrl) == ".gif")
                                        {
                                            <img src="~/Styles/img/product/@orderDetail.Product.ImageUrl" height="100px">
                                        }
                                        <h5>@orderDetail.Product.Name</h5>
                                    </td>
                                    <td>
                                        @orderDetail.Product.Price.ToString("C")
                                    </td>
                                    <td>
                                        @orderDetail.Quantity
                                    </td>
                                    <td>
                                        @((orderDetail.Product.Price * orderDetail.Quantity).ToString("C"))
                                    </td>
                                    <td>
                                        @orderDetail.Order.CreatedAt
                                    </td>
                                    <td>
                                        @orderDetail.Order.PaymentMethod
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6"></div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Order Total</h5>
                        <ul>
                            <li>Subtotal <span>$0</span></li>
                            <li>Total <span>@Model.TotalPrice.ToString("C")</span></li>
                        </ul>
                        <a href="#" class="primary-btn">Code mờ cả mắt !!!</a>
                    </div>
                </div>
            </div>
        </div>
</section>
    <!-- Shoping Cart Section End -->