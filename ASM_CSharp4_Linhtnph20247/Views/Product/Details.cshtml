@model ASM_CSharp4_Linhtnph20247.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h2 class="text-center fw-bold">Product Detail</h2>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size.Name)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="~/@Html.DisplayFor(model => model.Product.ImageUrl)"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Status)
        </dd>
    </dl>
    <div>
        <button type="button" class="btn btn-danger">
            <a class="text-decoration-none text-white" href="/Product/Edit/@Html.ValueFor(p=>p.Id)">Sửa</a>
        </button>
    </div>
</div>
<br/>
<div>
    <button type="button" class="btn btn-primary">
        <a class="text-decoration-none text-white" asp-action="Product">Back to List</a>
    </button>
</div>
