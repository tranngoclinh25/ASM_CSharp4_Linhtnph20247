@model ASM_CSharp4_Linhtnph20247.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}
<h2 class="text-center fw-bold">Product Edit</h2>
<div class="row">
    <div class="col-md-6 container">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId">Brand</label>
                <select asp-for="BrandId" class="form-control">
                    <option value="@Model.BrandId">-- Select Brand --</option>
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand.Value">@brand.Text</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="SizeId">Size</label>
                <select asp-for="SizeId" class="form-control">
                    <option value="@Model.SizeId">-- Select Size --</option>
                    @foreach (var size in Model.Sizes)
                    {
                        <option value="@size.Value">@size.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Please choose image file: </label>
                <input type="file" name="imageFile" accept="image/*"/>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control"/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <button type="button" class="btn btn-primary">
                <a class="text-decoration-none text-white" asp-action="Product">Back to List</a>
            </button>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
